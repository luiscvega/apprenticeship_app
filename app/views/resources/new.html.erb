<h1>Add Resource Form</h1>
<%= form_for @resource, :url => apprenticeship_resources_url do |f| %>
  <div class="field">
    <%= f.label :link %><br />
    <%= f.text_field :link %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 2 %>
  </div>
  <div class="action">
    <%= f.submit "Add Resource" %>
  </div>
<% end %>