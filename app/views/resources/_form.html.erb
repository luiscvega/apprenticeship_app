<%= form_for @resource, :url => apprenticeship_resource_url do |f| %>
  <div class="field">
    <%= f.label :link %><br />
    <%= f.text_field :link, :placeholder => "http://codeacademy.org"%> *kindly include "http://"
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, :placeholder => "Code Academy Website"%>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 2, :placeholder => "Write something here..."%>
  </div>
  <div class="action">
    <%= f.submit "Add Resource" %>
  </div>
<% end %>